<!--<?xml version="1.0" encoding="UTF-8"?>-->
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-writer-post" author="Vadim Kruchinin">
        <createTable tableName="writer_post">
            <column name="writer_id" type="int">
                <constraints foreignKeyName="writer_id" references="writer(id)"/>
            </column>
            <column name="post_id" type="int">
                <constraints foreignKeyName="post_id" references="post(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>